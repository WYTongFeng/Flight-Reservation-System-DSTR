{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: g++.exe build and debug flight system",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/flight_system.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
